<div class = "jumbotron" id = "home">
    <h1>Blog Post</h1>
</div>  

<div class = 'container'>
    <div class = 'jumbotron'>

        <p id="notice"><%= notice %></p>

        <p>
          <strong>Title:</strong>
          <%= @blog_post.title %>
        </p>

        <p>
          <strong>Content:</strong>
          <%= @blog_post.content %>
        </p>

        <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
        <%= link_to 'Back', blog_posts_path %>
    </div>
</div>
